{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "target": "es5",
        "downlevelIteration": true,
        "noImplicitAny": false,
        "noEmitOnError": false,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "assets/js/vendor/@types/"
            ]
        },
        "lib":[
            "dom",
            "es2015",
            "es6"
        ]
    },
    "awesomeTypescriptLoaderOptions": {
      "silent": true
    },
    "exclude": [
        "assets/js/vendor",
        "node_modules",
        "webpack.config.js"
    ]
}
